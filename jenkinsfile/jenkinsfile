pipeline {
    agent any

    environment {
        // Use Jenkins credentials for AWS
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm // Automatically uses the repository configured in the Jenkins job
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build Static Website') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy to S3') {
            steps {
                sh 'aws s3 sync ./build s3://static-website-devops --delete'
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! Website deployed to S3.'
        }
        failure {
            echo 'Pipeline failed. Check the logs for errors.'
        }
    }
}